{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/**",
        "headers": [
          {
            "key": "Permissions-Policy",
            "value": "geolocation=(self), microphone=(self), camera=(self)"
          }
        ]
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}